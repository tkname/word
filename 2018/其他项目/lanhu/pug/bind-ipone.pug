        //- script(type="text/javascript",src="./res/scripts/layer/mobile/layer.js")
        - let imgUrl="./res/images/";
    body
        .main.login
            .form-title.big 绑定手機號
            .form-type
                ul.clearfix
                    li  
                        span 驗證已綁定的郵箱
                            label 1
                    li.active 
                        span 驗證手機號碼
                            label 2

            .form
                    .form-ipone.form-box.type-list
                        .form-group.line-blue
                            label 手机号码 *
                            .type-box.type-ipone
                                .vertical
                                    span +86
                                    .select-box.none
                                        ul 
                                            li(data-val="+237") 喀麦隆（+237）
                                            li(data-val="+1") 加拿大（+1）
                                            li(data-val="+1345") 开曼群岛（+1345）
                                            li(data-val="+236") 中非共和国（+236）
                                            li(data-val="+56") 智利（+56）
                                            li(data-val="+56") 智利（+56）
                                            li.active(data-val="+86") 中国（+86）
                                            li(data-val="+57") 哥伦比亚（+57）
                                input(type="text" placeholder='请输入手机号')


                    a(href="safe-setting.html").btn-submit 确认提交
