include ../public/public.pug

html
    head
        meta(charset="utf-8")
        meta(name="viewport",content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0")
        title CHAOEX
        link(href='./res/styles/main.css?v=1.1',type='text/css',rel='stylesheet')
        //- link(href='./res/styles/select.css?v=1.1',type='text/css',rel='stylesheet')
        //- link(href='./res/styles/jquery.mCustomScrollbar.min.css?v=1.1',type='text/css',rel='stylesheet')

        script(type="text/javascript",src="./res/scripts/rem.js")
        script(type="text/javascript",src="./res/scripts/jquery.min.js")
        script(type="text/javascript",src="./res/scripts/swiper.min.js")
        //- script(type="text/javascript",src="./res/scripts/jquery.mCustomScrollbar.concat.min.js")
        //- script(type="text/javascript",src="./res/scripts/jquery.select.js")
        script(type="text/javascript",src="./res/scripts/main.js")
        //- script(type="text/javascript",src="./res/scripts/layer/mobile/layer.js")
        - let imgUrl="./res/images/";
    body
        .header
            .logo.left
            .btn-box
                a.login 登录
                a.register 注册
        .main
            .register
                .nav-meunBox
                    .content-box
                        .nav-meun.line-blue.clearfix
                            ul
                                li 
                                    span 邮箱注册
                                li.active 
                                    span 手机注册
                .form
                    .type-box
                        .form-email.form-box.none.type-list
                            .form-group.line-blue
                                label 邮箱 *
                                .type-box
                                    input(type="text" placeholder='请输入邮箱')
                            .form-group.line-blue
                                label 确认密码 *
                                .type-box
                                    input(type="password" placeholder='请确认密码')
                            .form-group.line-blue
                                label 确认密码 *
                                .type-box
                                    input(type="password" placeholder='请输入密码')                            
                            .form-group.line-blue
                                label 手机验证码 *
                                .type-box
                                    input(type="text" placeholder='请输入验证码')
                                    .code 发送验证码
                            .form-group.line-blue
                                label 邀请码
                                .type-box
                                    input(type="text" placeholder='请输入邀请码')
                            .form-check
                                span 
                                    label.check-box
                                        input(type='checkbox' class='input-protocol') 
                                        i                    
                                    | 我已閱讀並同意《CHAOEX服務條款》
                            .btn-submit 注册           
                            .form-loginText
                                | 已有帳戶？ 
                                span 登錄    

                        .form-ipone.form-box.type-list
                            .form-group.line-blue
                                label 手机号码 *
                                .type-box.type-ipone
                                    .vertical
                                        span +86
                                        .select-box.none
                                            ul 
                                                li(data-val="+237") 喀麦隆（+237）
                                                li(data-val="+1") 加拿大（+1）
                                                li(data-val="+1345") 开曼群岛（+1345）
                                                li(data-val="+236") 中非共和国（+236）
                                                li(data-val="+56") 智利（+56）
                                                li(data-val="+86") 中国（+86）
                                                li(data-val="+57") 哥伦比亚（+57）
                                    input(type="text" placeholder='请输入手机号')
                            .form-group.line-blue
                                label 密码 *
                                .type-box
                                    input(type="text" placeholder='请输入密码')
                            .form-group.line-blue
                                label 确认密码 *
                                .type-box
                                    input(type="text" placeholder='请输入密码')
                            .form-group.line-blue
                                label 手机验证码 *
                                .type-box
                                    input(type="text" placeholder='请输入验证码')
                                    .code 发送验证码
                            .form-group.line-blue
                                label 邀请码
                                .type-box
                                    input(type="text" placeholder='请输入邀请码')
                            .form-check
                                span 
                                    label.check-box
                                        input(type='checkbox' class='input-protocol') 
                                        i                    
                                    | 我已閱讀並同意《CHAOEX服務條款》
                            .btn-submit 注册
